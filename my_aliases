#  open bash in docker
function dbash() {
    ( docker exec -it $* bash )
}

# open sh in docker
function dsh() {
    ( docker exec -it $* sh )
}

# see docker logs
function dlog() {
   ( docker logs $*)
}

# see k8s secret
function see() {
    eval "$* -o json | jq '.data | map_values(@base64d)'"
}

repeat_cmd() {
  local GREEN="\033[1;32m"
  local YELLOW="\033[1;33m"
  local RED="\033[1;31m"
  local RESET="\033[0m"

  while true; do
    "$@"
    local exit_code=$?
    
    echo -e ""
    echo -e "${YELLOW}─────────────────────────────────────────${RESET}"
    echo -e "${RED}Command exited with code ${exit_code}.${RESET}"
    echo -e "${GREEN}Restarting in 1 second...${RESET}"
    echo -e "${YELLOW}─────────────────────────────────────────${RESET}"

    sleep 1
  done
}

