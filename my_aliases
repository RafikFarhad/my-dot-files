#  open bash in docker
function dbash() {
    ( docker exec -it $* bash )
}

# open sh in docker
function dsh() {
    ( docker exec -it $* sh )
}

# see docker logs
function dlog() {
   ( docker logs $*)
}

# see k8s secret
function see() {
    eval "$* -o json | jq '.data | map_values(@base64d)'"
}

